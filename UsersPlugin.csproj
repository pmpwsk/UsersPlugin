<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>uwap.UsersPlugin</PackageId>
    <Title>UsersPlugin</Title>
    <Version>1.2.3</Version>
    <Authors>pmpwsk</Authors>
    <Company>uwap.org</Company>
    <Description>Plugin for WebFramework that adds a simple interface to register, log in and manage your account settings.</Description>
    <Copyright>uwap.org</Copyright>
    <PackageProjectUrl>https://uwap.org/projects/users-plugin</PackageProjectUrl>
    <PackageIcon>u-128.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/pmpwsk/UsersPlugin</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>plugin;users;user-management;accounts;wf-plugin</PackageTags>
    <PackageReleaseNotes>https://uwap.org/changes/users-plugin</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="uwap.WebFramework" Version="1.5.4" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="u-128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
